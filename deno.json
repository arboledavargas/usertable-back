{
  "tasks": {
    "dev:watch": "deno run --watch -A --env src/main.ts",
    "db:start-mongo": "docker run --name mongodb-container -d -p 27017:27017 -v mongo-data:/data/db -e MONGO_INITDB_ROOT_USERNAME=myuser -e MONGO_INITDB_ROOT_PASSWORD=mypass mongo:latest",
    "db:sync": "deno run -A npm:prisma db push --skip-generate",
    "prisma:generate": "deno run -A npm:prisma generate --no-engine",
    "graphql:generate": "deno run -A codegen.ts"
  },
  "imports": {
    "./": "./",
    "/": "./",
    "@graphql-codegen/cli": "npm:@graphql-codegen/cli@^5.0.2",
    "@graphql-codegen/core": "npm:@graphql-codegen/core@^4.0.2",
    "@graphql-codegen/typescript": "npm:@graphql-codegen/typescript@^4.0.9",
    "@graphql-codegen/typescript-resolvers": "npm:@graphql-codegen/typescript-resolvers@^4.2.1",
    "@graphql-tools/graphql-file-loader": "npm:@graphql-tools/graphql-file-loader@^8.0.1",
    "@graphql-tools/load": "npm:@graphql-tools/load@^8.0.2",
    "@graphql-tools/schema": "npm:@graphql-tools/schema@^10.0.6",
    "@prisma/client": "./generated/prisma/deno/edge.ts",
    "@prisma/extension-accelerate": "npm:@prisma/extension-accelerate@^1.1.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.0.6",
    "graphql": "npm:graphql@^16.9.0",
    "graphql-yoga": "npm:graphql-yoga@^5.7.0"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
