generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum FieldType {
  TEXT
  NUMBER
  DATE
  BOOLEAN
}

model UserFormField {
  id                 String               @id @default(auto()) @map("_id") @db.ObjectId
  fieldName          String
  type               FieldType
  owneridId          String               @db.ObjectId
  organizationid     String               @db.ObjectId
  organization       Organization         @relation(fields: [organizationid], references: [id])
  UserFormFieldValue UserFormFieldValue[]
}

model UserFormFieldValue {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  value           String
  userFormFieldId String        @db.ObjectId
  userFormField   UserFormField @relation(fields: [userFormFieldId], references: [id])
  userId          String        @db.ObjectId
  user            User          @relation(fields: [userId], references: [id])
}

model User {
  id                 String               @id @default(auto()) @map("_id") @db.ObjectId
  UserFormFieldValue UserFormFieldValue[]
}

model Owner {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String       @unique
  organizationid String       @db.ObjectId
  organization   Organization @relation(fields: [organizationid], references: [id])
}

model Organization {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  Owner         Owner[]
  UserFormField UserFormField[]
}
